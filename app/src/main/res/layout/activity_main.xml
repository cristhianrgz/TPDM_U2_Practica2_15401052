<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clientes"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Llenar campos para insertar"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Escriba el nombre"
        android:id="@+id/editNombreCl"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Escriba el domicilio"
        android:id="@+id/editDomicilioCl"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Escriba el telefono"
        android:id="@+id/editTelefonoCl"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnInsertarCl"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:background="#95D8F5"
            android:text="Insertar"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnBuscarCl"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:background="#95D8F5"
            android:text="Buscar"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            />

        <Button
            android:id="@+id/btnEliminarCl"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#E74F73"
            android:text="Eliminar"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnActualizarCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5C271"
        android:text="Actualizar"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar tareas registradas"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/clientesRegistrados"

        />

</LinearLayout>