<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Main5Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle de compras"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Llenar campos para insertar"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Escriba el id del almacen"
        android:id="@+id/editIDALMACEN"
        android:inputType="number"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Escriba la cantidad"
        android:id="@+id/editCantidadDet"
        android:inputType="number"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Escriba el precio"
        android:id="@+id/editPrecioDet"
        android:inputType="number"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnInsertarDet"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:background="#95D8F5"
            android:text="Insertar"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnBuscarDet"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:background="#95D8F5"
            android:text="Buscar"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            />

        <Button
            android:id="@+id/btnEliminarDet"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#E74F73"
            android:text="Eliminar"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnActualizarDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5C271"
        android:text="Actualizar"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Mostrar todos los Det compra"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detComprasRegistradas"
        />

</LinearLayout>